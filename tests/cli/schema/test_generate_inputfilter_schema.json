{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Complete Test Schema",
  "description": "Comprehensive test schema covering all supported JSON Schema types for CLI testing",
  "type": "object",
  "properties": {
    "string_field": {
      "type": "string",
      "description": "Basic string field"
    },
    "email_field": {
      "type": "string",
      "format": "email",
      "description": "Email format field",
      "error": "Please enter a valid email address"
    },
    "uri_field": {
      "type": "string",
      "format": "uri",
      "description": "URI format field"
    },
    "date_field": {
      "type": "string",
      "format": "date-time",
      "description": "Date-time format field"
    },
    "pattern_field": {
      "type": "string",
      "pattern": "^[A-Z]{2,3}-\\d{4}$",
      "description": "String with regex pattern",
      "error": "Format must be like ABC-1234"
    },
    "integer_field": {
      "type": "integer",
      "description": "Integer with min/max constraints",
      "error": "Value must be between 0 and 1000"
    },
    "number_field": {
      "type": "number",
      "description": "Float number with constraints"
    },
    "boolean_field": {
      "type": "boolean",
      "description": "Boolean field"
    },
    "enum_field": {
      "type": "string",
      "enum": ["active", "inactive", "pending"],
      "description": "String enum field"
    },
    "array_strings": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Array of strings"
    },
    "array_integers": {
      "type": "array",
      "items": {
        "type": "integer"
      },
      "description": "Array of integers with constraints"
    },
    "nested_object": {
      "type": "object",
      "properties": {
        "sub_string": {
          "type": "string",
          "required": "true",
          "description": "String in nested object"
        },
        "sub_number": {
          "type": "number",
          "description": "Number in nested object"
        }
      },
      "description": "Nested object field"
    },
    "optional_string": {
      "type": "string",
      "required": "true",
      "description": "Optional string field"
    },
    "default_value_field": {
      "type": "string",
      "required": "true",
      "default": "default_value",
      "description": "String field with default value"
    },
    "nullable_field": {
      "type": ["string", "null"],
      "required": "true",
      "description": "Field that can be string or null"
    }
  }
}
